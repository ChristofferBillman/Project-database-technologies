@model Projekt3.Models.ProfileModel

@{
    ViewData["Title"] = "Home Page";
}
<header>
    <div>
        @await Html.PartialAsync("LoginHeader")
    </div>
</header>

<div class="indexWrapper">
    <div class="centeredCaption">
        <h1 class="indexCaption">Welcome to Dating App</h1>
    </div>

    <div class="alignIndex">


        <div class="row">
            <div class="svg-item">
                <svg width="100%" height="100%" viewBox="0 0 40 40" class="donut">
                    <circle class="donut-hole" cx="20" cy="20" r="15.91549430918954" fill="#fff"></circle>
                    <circle class="donut-ring" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5"></circle>
                    <circle class="donut-segment donut-segment-3" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5" stroke-dasharray="100 0" stroke-dashoffset="25"></circle>
                    <g class="donut-text donut-text-2">

                        <text y="50%" transform="translate(0, 2)">
                            <tspan x="50%" text-anchor="middle" class="donut-percent">100%</tspan>
                        </text>
                        <text y="60%" transform="translate(0, 2)">
                            <tspan x="50%" text-anchor="middle" class="donut-data">Excitement</tspan>
                        </text>
                    </g>
                </svg>
            </div>

            <div class="svg-item">
                <svg width="100%" height="100%" viewBox="0 0 40 40" class="donut">
                    <circle class="donut-hole" cx="20" cy="20" r="15.91549430918954" fill="#fff"></circle>
                    <circle class="donut-ring" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5"></circle>
                    <circle class="donut-segment donut-segment-2" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5" stroke-dasharray="95 5" stroke-dashoffset="25"></circle>
                    <g class="donut-text donut-text-1">

                        <text y="50%" transform="translate(0, 2)">
                            <tspan x="50%" text-anchor="middle" class="donut-percent">95%</tspan>
                        </text>
                        <text y="60%" transform="translate(0, 2)">
                            <tspan x="50%" text-anchor="middle" class="donut-data">Satisfied Users</tspan>
                        </text>
                    </g>
                </svg>
            </div>

        </div>

        <div class="svg-item">
            <svg width="100%" height="100%" viewBox="0 0 40 40" class="donut">
                <circle class="donut-hole" cx="20" cy="20" r="15.91549430918954" fill="#fff"></circle>
                <circle class="donut-ring" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5"></circle>
                <circle class="donut-segment donut-segment-4" cx="20" cy="20" r="15.91549430918954" fill="transparent" stroke-width="3.5" stroke-dasharray="90 10" stroke-dashoffset="25"></circle>
                <g class="donut-text donut-text-2">

                    <text y="50%" transform="translate(0, 2)">
                        <tspan x="50%" text-anchor="middle" class="donut-percent">90%</tspan>
                    </text>
                    <text y="60%" transform="translate(0, 2)">
                        <tspan x="50%" text-anchor="middle" class="donut-data">Match accuracy</tspan>
                    </text>
                </g>
            </svg>
        </div>

    </div>

    <div class="centeredCaption">
        <h3>Find your soulmate, they might be only one click away!</h3>
    </div>
</div>
