@model Projekt3.Models.ProfileModel

@{
    ViewData["Title"] = "Explore";
}

<h1>Find your perfect match</h1>


<div>


    <a asp-action="Home" class="word-link">Return to homepage</a>
    <hr />



    <div class="student-profile py-4">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent text-center">
                            <img class="profile_img" src="@Model.ProfilePicture" alt="student dp">
                            <h3>@Html.DisplayFor(model => model.Firstname)  @Html.DisplayFor(model => model.Lastname)</h3>
                        </div>

                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Information</h3>
                        </div>
                        <div class="card-body pt-0">
                            <table class="table table-bordered">
                                <tr>
                                    <th width="30%">Age</th>
                                    <td>@Html.DisplayFor(model => model.Age)</td>
                                </tr>
                                <tr>
                                    <th width="30%">From</th>
                                    <td>@ViewBag.country</td>
                                </tr>
                                <tr>
                                    <th width="30%">Gender</th>
                                    <td>@Html.DisplayFor(model => model.Sex)</td>
                                </tr>
                                <tr>
                                    <th width="30%">Sexual Orientation</th>
                                    <td>@Html.DisplayFor(model => model.SexualPreference)</td>
                                </tr>
                                <tr>
                                    <th width="30%">Email</th>
                                    <td>@Html.DisplayFor(model => model.Email)</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div style="height: 26px"></div>
                    <div class="card shadow-sm">
                        <div class="card-header bg-transparent border-0">
                            <h3 class="mb-0"><i class="far fa-clone pr-1"></i>Desciption</h3>
                        </div>
                        <div class="card-body pt-0">
                            <p>@Html.DisplayFor(model => model.Description) </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <form method="post" asp-action="Explore">
        <input type="hidden" name="PersonId" value=@Model.ID>
        <input type="submit" name="Dislike" value="Dislike" class="btn btn-primary"/>
        <input type="submit" name="Like" value="Like" class="btn btn-primary"/>
    </form>
