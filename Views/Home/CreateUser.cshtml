@model Projekt3.Models.ProfileModel

@{
    ViewData["Title"] = "View";
}


<h5>     </h5>


<div class="row">
    <form asp-action="View">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h1>Create a profile</h1>

        <div>
            <a asp-action="Index" class="word-link">Back to Start</a>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>First name</label>
                    <input asp-for="Firstname" class="form-control" />
                    <span asp-validation-for="Firstname" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Last name</label>
                    <input asp-for="Lastname" class="form-control" />
                    <span asp-validation-for="Lastname" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Gender</label>
                    <select name="Sex" class="form-control" asp-items="@ViewBag.Sex"></select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Sexual Orientation</label>
                    <select name="SexualPreference" class="form-control" asp-items="@ViewBag.SexPref"></select>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Country</label>
                    <select name="Country" class="form-control" asp-items="@ViewBag.Country"></select>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Profile Picture</label>
                    <div class="custom-file">
                        <input asp-for="ProfilePicture" type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Pick file</label>
                    </div>
                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input asp-action="UserValidation" type="submit" value="Create profile" class="btn btn-primary" />
                </div>
            </div>
        </div>

    </form>
</div>





@section scripts{
<script type="text/javascript">
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
}


